<p>Search page</p>

<!--create dropdown form populated with options of every category type  -->
<!-- pass the category_id user selects before they search through option value='@category.id' -->
<form action="/search/:id" method='post'>
  <select name="category_id">
    <!-- loop through all the categories to populate the list of category possibilities -->
    <% @categories.each do |category|%>
      <option value='<%= category.id %>'><%= category.category_name %></option>
    <% end %>

  </select>
  <!-- <input class='hidden' hidden=''> -->
  <input type="submit" value='seach!'>
</form>

